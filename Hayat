class _ProfileScreen2State extends State<ProfileScreen2> {
  bool isOn = false; // متغير لتحويل الحالة on/off
 
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Color(0xFFE6F0FA),
      appBar: AppBar(
        centerTitle: true,
        title: Text(
          "الحساب الشخصي",
