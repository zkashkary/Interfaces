class MainNavigationDepartment extends StatefulWidget {
  @override
  State<MainNavigationDepartment> createState() => _MainNavigationDepartmentState();
}
class _MainNavigationDepartmentState extends State<MainNavigationDepartment> {
  int index = 2;        
  final List<Widget> screens = [
    
    ProfileScreen(),
    CategoriesScreen(),
    MaintenanceDashboardScreen(),   // home 
  ];
  Widget build(BuildContext context) {
    return Scaffold(
      body: screens[index],

      bottomNavigationBar: BottomNavigationBar(                            //مربع التنقل السفلي
          backgroundColor: Colors.white,
          selectedItemColor: Color(0xFF094A8F), 
          unselectedItemColor: Colors.grey,
          currentIndex: index,
          onTap: (value){
            setState(() {
              index=value;
            });
          },
          items: [
            BottomNavigationBarItem(icon: Icon(Icons.person),label: "الحساب الشخصي"),
            BottomNavigationBarItem(icon: Icon(Icons.category),label: "الفئات"),
            BottomNavigationBarItem(icon: Icon(Icons.home),label: " الرئيسية"),
            
          ],
        ),
      );
  }

}


class MaintenanceDashboardScreen extends StatelessWidget {     //home maintenance 
  const MaintenanceDashboardScreen({super.key});

  @override
  Widget build(BuildContext context) {
    final reports = sampleReports;
    final processingCount = _countByStatus(
      reports,
      ReportStatus.underProcessing,
    );
    final fixedCount = _countByStatus(reports, ReportStatus.fixed);
    return Scaffold(
      backgroundColor: Color(0xFFE6F0FA),
      appBar: AppBar(
          centerTitle: true,
          title: Text("لوحة التحكم",style: TextStyle(
            fontSize: 30,
            color: Color(0xFF094A8F),
            fontWeight: FontWeight.bold),),
        ),
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.all(AppSpacing.md),
          child: ListView(
            children: [
              _SummaryCard(
                totalReports: reports.length,
                onTap: () {
                  Navigator.of(context).push(
                    MaterialPageRoute(builder: (_) => const ReportsScreen()),
                  );
                },
              ),
              const SizedBox(height: AppSpacing.md),
              _StatsRow(
                processingCount: processingCount,
                fixedCount: fixedCount,
              ),
              const SizedBox(height: AppSpacing.md),
              const _CategoriesCard(),
            ],
          ),
        ),
      ),
    );
  }
}

class _SummaryCard extends StatelessWidget {
  final int totalReports;
  final VoidCallback onTap;

  const _SummaryCard({required this.totalReports, required this.onTap});

  @override
  Widget build(BuildContext context) {
    return InkWell(
      borderRadius: BorderRadius.circular(AppRadius.md),
      onTap: onTap,
      child: Container(
        padding: const EdgeInsets.all(AppSpacing.md),
        decoration: BoxDecoration(
          color: AppColors.white,
          borderRadius: BorderRadius.circular(AppRadius.md),
          boxShadow: CardShadow.small,
        ),
        child: Row(
          children: [
            Container(
              width: 48,
              height: 48,
              decoration: BoxDecoration(
                color: AppColors.cardTint,
                borderRadius: BorderRadius.circular(AppRadius.sm),
              ),
              child: const Icon(Icons.description, color: AppColors.primary),
            ),
            const SizedBox(width: AppSpacing.md),
            Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  'إجمالي البلاغات',
                  style: AppText.small.copyWith(color: AppColors.textSecondary),
                ),
                const SizedBox(height: AppSpacing.xs),
                Text(
                  '$totalReports',
                  style: AppText.h2.copyWith(color: AppColors.primary),
                ),
              ],
            ),
            const Spacer(),
            const Icon(Icons.chevron_right, color: AppColors.textLight),
          ],
        ),
      ),
    );
  }
}

class _StatsRow extends StatelessWidget {
  final int processingCount;
  final int fixedCount;

  const _StatsRow({required this.processingCount, required this.fixedCount});

  @override
  Widget build(BuildContext context) {
    return Row(
      children: [
        Expanded(
          child: _MiniStatCard(
            value: processingCount.toString(),
            label: 'قيد المعالجة',
            icon: Icons.access_time,
            iconColor: AppColors.processing,
          ),
        ),
        const SizedBox(width: AppSpacing.md),
        Expanded(
          child: _MiniStatCard(
            value: fixedCount.toString(),
            label: 'تم الإصلاح',
            icon: Icons.check_circle,
            iconColor: AppColors.fixed,
          ),
        ),
      ],
    );
  }
}

int _countByStatus(List<MaintenanceReport> reports, ReportStatus status) {
  var count = 0;
  for (final report in reports) {
    if (report.status == status) {
      count++;
    }
  }
  return count;
}

class _MiniStatCard extends StatelessWidget {
  final String value;
  final String label;
  final IconData icon;
  final Color iconColor;

  const _MiniStatCard({
    required this.value,
    required this.label,
    required this.icon,
    required this.iconColor,
  });

  @override
  Widget build(BuildContext context) {
    return Container(
      padding: const EdgeInsets.symmetric(
        vertical: AppSpacing.md,
        horizontal: AppSpacing.sm,
      ),
      decoration: BoxDecoration(
        color: AppColors.white,
        borderRadius: BorderRadius.circular(AppRadius.md),
        boxShadow: CardShadow.small,
      ),
      child: Column(
        children: [
          Container(
            width: 32,
            height: 32,
            decoration: BoxDecoration(
              color: AppColors.cardTint,
              borderRadius: BorderRadius.circular(AppRadius.sm),
            ),
            child: Icon(icon, color: iconColor, size: 18),
          ),
          const SizedBox(height: AppSpacing.sm),
          Text(value, style: AppText.h3.copyWith(color: AppColors.primary)),
          const SizedBox(height: AppSpacing.xs),
          Text(
            label,
            style: AppText.caption.copyWith(color: AppColors.textSecondary),
            textAlign: TextAlign.center,
          ),
        ],
      ),
    );
  }
}

class _CategoriesCard extends StatelessWidget {
  const _CategoriesCard();

  @override
  Widget build(BuildContext context) {
    return Container(
      padding: const EdgeInsets.all(AppSpacing.md),
      decoration: BoxDecoration(
        color: AppColors.white,
        borderRadius: BorderRadius.circular(AppRadius.md),
        boxShadow: CardShadow.small,
      ),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Text(
            'نظرة عامة على الفئات',
            style: AppText.bodyBold.copyWith(color: AppColors.primary),
          ),
          const SizedBox(height: AppSpacing.sm),
          GridView.count(
            crossAxisCount: 3,
            shrinkWrap: true,
            physics: const NeverScrollableScrollPhysics(),
            mainAxisSpacing: AppSpacing.sm,
            crossAxisSpacing: AppSpacing.sm,
            childAspectRatio: 0.95,
            children: const [
              _CategoryTile(
                icon: Icons.flash_on,
                label: 'الكهرباء',
                count: '1',
                iconColor: AppColors.secondary,
              ),
              _CategoryTile(
                icon: Icons.weekend,
                label: 'الأثاث',
                count: '0',
                iconColor: AppColors.secondary,
              ),
              _CategoryTile(
                icon: Icons.air,
                label: 'التكييف',
                count: '0',
                iconColor: AppColors.secondary,
              ),
              _CategoryTile(
                icon: Icons.warning,
                label: 'عاجل',
                count: '1',
                iconColor: AppColors.secondary,
              ),
              _CategoryTile(
                icon: Icons.opacity,
                label: 'السباكة',
                count: '0',
                iconColor: AppColors.secondary,
              ),
              _CategoryTile(
                icon: Icons.more_horiz,
                label: 'أخرى',
                count: '0',
                iconColor: AppColors.secondary,
              ),
            ],
          ),
        ],
      ),
    );
  }
}

class _CategoryTile extends StatelessWidget {
  final IconData icon;
  final String label;
  final String count;
  final Color iconColor;

  const _CategoryTile({
    required this.icon,
    required this.label,
    required this.count,
    required this.iconColor,
  });

  @override
  Widget build(BuildContext context) {
    return Container(
      padding: const EdgeInsets.symmetric(
        vertical: AppSpacing.sm,
        horizontal: AppSpacing.xs,
      ),
      decoration: BoxDecoration(
        color: AppColors.background,
        borderRadius: BorderRadius.circular(AppRadius.sm),
        border: Border.all(color: AppColors.border),
      ),
      child: LayoutBuilder(
        builder: (context, constraints) {
          return FittedBox(
            fit: BoxFit.scaleDown,
            alignment: Alignment.center,
            child: SizedBox(
              width: constraints.maxWidth,
              child: Column(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  Container(
                    width: 28,
                    height: 28,
                    decoration: BoxDecoration(
                      color: AppColors.cardTint,
                      borderRadius: BorderRadius.circular(AppRadius.sm),
                    ),
                    child: Icon(icon, color: iconColor, size: 16),
                  ),
                  const SizedBox(height: AppSpacing.xs),
                  Text(
                    label,
                    textAlign: TextAlign.center,
                    style: AppText.caption.copyWith(
                      color: AppColors.textSecondary,
                      height: 1.1,
                    ),
                    maxLines: 2,
                    overflow: TextOverflow.ellipsis,
                    softWrap: true,
                  ),
                  const SizedBox(height: AppSpacing.xs),
                  Text(
                    count,
                    style: AppText.bodyBold.copyWith(color: AppColors.primary),
                  ),
                ],
              ),
            ),
          );
        },
      ),
    );
  }
}


class ReportsScreen extends StatelessWidget {
  const ReportsScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        leading: const BackButton(),
        title: const Text('البلاغات'),
      ),
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.all(AppSpacing.md),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Text(
                'إجمالي البلاغات',
                style: AppText.bodyBold.copyWith(color: AppColors.primary),
              ),
              const SizedBox(height: AppSpacing.xs),
              Text(
                'تم العثور على ${sampleReports.length} بلاغ',
                style: AppText.small.copyWith(color: AppColors.textSecondary),
              ),
              const SizedBox(height: AppSpacing.md),
              Expanded(
                child: ListView.separated(
                  itemCount: sampleReports.length,
                  separatorBuilder: (_, __) =>
                      const SizedBox(height: AppSpacing.sm),
                  itemBuilder: (context, index) {
                    final report = sampleReports[index];
                    return _ReportCard(
                      report: report,
                      onTap: () {
                        Navigator.of(context).push(
                          MaterialPageRoute(
                            builder: (_) =>
                                ReportDetailsScreen(report: report),
                          ),
                        );
                      },
                    );
                  },
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}

class _ReportCard extends StatelessWidget {
  final MaintenanceReport report;
  final VoidCallback onTap;

  const _ReportCard({required this.report, required this.onTap});

  @override
  Widget build(BuildContext context) {
    final statusStyle = _statusStyle(report.status);
    return InkWell(
      borderRadius: BorderRadius.circular(AppRadius.md),
      onTap: onTap,
      child: Container(
        padding: const EdgeInsets.all(AppSpacing.md),
        decoration: BoxDecoration(
          color: AppColors.white,
          borderRadius: BorderRadius.circular(AppRadius.md),
          boxShadow: CardShadow.small,
        ),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Icon(
                  report.categoryIcon,
                  color: AppColors.secondary,
                  size: 18,
                ),
                const SizedBox(width: AppSpacing.sm),
                Expanded(
                  child: Text(
                    report.title,
                    style: AppText.bodyBold.copyWith(color: AppColors.primary),
                    maxLines: 1,
                    overflow: TextOverflow.ellipsis,
                  ),
                ),
                const SizedBox(width: AppSpacing.sm),
                Container(
                  padding: const EdgeInsets.symmetric(
                    horizontal: AppSpacing.sm,
                    vertical: 4,
                  ),
                  decoration: BoxDecoration(
                    color: statusStyle.background,
                    borderRadius: BorderRadius.circular(AppRadius.lg),
                  ),
                  child: Text(
                    statusStyle.label,
                    style: AppText.caption.copyWith(color: statusStyle.text),
                    maxLines: 1,
                    overflow: TextOverflow.ellipsis,
                  ),
                ),
              ],
            ),
            const SizedBox(height: AppSpacing.xs),
            _IconLine(
              icon: Icons.apartment,
              text: report.building,
            ),
            const SizedBox(height: AppSpacing.xs),
            _IconLine(
              icon: Icons.place_outlined,
              text: report.location,
            ),
            const SizedBox(height: AppSpacing.sm),
            Divider(
              height: 1,
              thickness: 1,
              color: AppColors.border,
            ),
            const SizedBox(height: AppSpacing.sm),
            Row(
              children: [
                Expanded(
                  child: Text(
                    report.category,
                    style: AppText.caption.copyWith(
                      color: AppColors.secondary,
                      fontWeight: FontWeight.w600,
                    ),
                    maxLines: 1,
                    overflow: TextOverflow.ellipsis,
                  ),
                ),
                Text(
                  _formatDate(report.date),
                  style:
                      AppText.caption.copyWith(color: AppColors.textLight),
                  maxLines: 1,
                  overflow: TextOverflow.ellipsis,
                ),
              ],
            ),
          ],
        ),
      ),
    );
  }
}

class _IconLine extends StatelessWidget {
  final IconData icon;
  final String text;

  const _IconLine({required this.icon, required this.text});

  @override
  Widget build(BuildContext context) {
    return Row(
      children: [
        Icon(icon, size: 12, color: AppColors.textLight),
        const SizedBox(width: 4),
        Expanded(
          child: Text(
            text,
            style: AppText.caption.copyWith(color: AppColors.textSecondary),
            maxLines: 1,
            overflow: TextOverflow.ellipsis,
          ),
        ),
      ],
    );
  }
}

class _StatusStyle {
  final String label;
  final Color background;
  final Color text;

  const _StatusStyle({
    required this.label,
    required this.background,
    required this.text,
  });
}

_StatusStyle _statusStyle(ReportStatus status) {
  switch (status) {
    case ReportStatus.fixed:
      return const _StatusStyle(
        label: 'تم الإصلاح',
        background: Color(0xFFE7F6EC),
        text: AppColors.fixed,
      );
    case ReportStatus.underProcessing:
      return const _StatusStyle(
        label: 'قيد المعالجة',
        background: Color(0xFFFFF2DB),
        text: AppColors.processing,
      );
  }
}

String _formatDate(DateTime date) {
  const months = [
    'يناير',
    'فبراير',
    'مارس',
    'أبريل',
    'مايو',
    'يونيو',
    'يوليو',
    'أغسطس',
    'سبتمبر',
    'أكتوبر',
    'نوفمبر',
    'ديسمبر',
  ];
  final month = months[date.month - 1];
  final day = date.day.toString().padLeft(2, '0');
  return '$day $month ${date.year}';
}

enum ReportStatus {
  underProcessing,
  fixed,
}

class MaintenanceReport {
  final String id;
  final String title;
  final String submittedBy;
  final DateTime date;
  final String category;
  final IconData categoryIcon;
  final String campus;
  final String building;
  final String location;
  final String description;
  final ReportStatus status;

  const MaintenanceReport({
    required this.id,
    required this.title,
    required this.submittedBy,
    required this.date,
    required this.category,
    required this.categoryIcon,
    required this.campus,
    required this.building,
    required this.location,
    required this.description,
    required this.status,
  });
}

