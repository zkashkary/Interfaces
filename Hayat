class Report_History extends StatelessWidget {
  const Report_History({super.key});
 
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Directionality(
        textDirection: TextDirection.rtl,
        child: Scaffold(
          backgroundColor: const Color(0xFFE6F0FA),
          appBar: AppBar(
            backgroundColor: Colors.white,
            elevation: 0.5,
 
            leading: IconButton(
              icon: const Icon(Icons.arrow_back, color: Color(0xFF094A8F)),
              onPressed: () {
                Navigator.pop(context);
              },
            ),
            centerTitle: true,
            title: const Text(
              'سجل البلاغ',
              style: TextStyle(
                color: Color(0xFF094A8F),
                fontSize: 28,
                fontWeight: FontWeight.bold,
              ),
            ),
          ),
        ),
      ),
    );
  }
}
 
