class VeriftPage extends StatelessWidget {
  final bool isStudent;
  VeriftPage(this.isStudent, {super.key});
  final TextEditingController textController = TextEditingController();
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: const Color(0xFFE6F0FA),
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.all(16),
          child: Column(
            children: [
              const SizedBox(height: 40),
              CircleAvatar(
                radius: 50,
                backgroundColor: const Color.fromARGB(255, 5, 3, 30),
                child: Image.asset(
                  'images/Balaghi_logo_new.jpg',
                  width: 55,
                  height: 55,
                ),
              ),
              SizedBox(height: 30),
              const Text(
                'بلاغي',
                style: TextStyle(
                  fontSize: 32,
                  fontWeight: FontWeight.w800,
                  color: Color(0xFF094A8F),
                ),
              ),
 
              const SizedBox(height: 30),
              Container(
                width: double.infinity,
                padding: EdgeInsets.all(25),
                decoration: BoxDecoration(
                  color: Colors.white,
                  borderRadius: BorderRadius.circular(15),
                ),
                child: Column(
                  children: [
                    Icon(
                      Icons.email_rounded,
                      size: 50,
                      color: Color(0xFF094A8F),
                    ),
                    SizedBox(height: 14),
                    Text(
                      " تحقق من الايميل ",
                      style: TextStyle(
                        fontSize: 25,
                        fontWeight: FontWeight.bold,
                      ),
                    ),
                    SizedBox(height: 10),
                    Text(
                      " تم إرسال رمز تحقق الى بريدك الجامعي ",
                      textAlign: TextAlign.center,
                      style: TextStyle(color: Color(0xFF666666)),
                    ),
                  ],
                ),
              ),
              SizedBox(height: 25),
              Align(
                alignment: Alignment.centerRight,
                child: Text(
                  'ادخل رمز التحقق',
                  style: TextStyle(
                    fontWeight: FontWeight.w700,
                    color: Color(0xFF1A1A1A),
                  ),
                ),
              ),
              SizedBox(height: 12),
              TextField(
                controller: textController,
                maxLength: 4,
 
                inputFormatters: [FilteringTextInputFormatter.digitsOnly],
                decoration: InputDecoration(
                  hintText: ' 1234 ',
 
                  filled: true,
                  fillColor: Colors.white,
                  contentPadding: const EdgeInsets.symmetric(
                    horizontal: 14,
                    vertical: 14,
                  ),
                  border: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(12),
                    borderSide: const BorderSide(color: Color(0xFFD0D0D0)),
                  ),
 
                  enabledBorder: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(12),
                    borderSide: const BorderSide(color: Color(0xFFD0D0D0)),
                  ),
                  focusedBorder: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(12),
                    borderSide: const BorderSide(
                      color: Color.fromARGB(255, 187, 186, 186),
                      width: 2,
                    ),
                  ),
                ),
              ),
              SizedBox(height: 16),
              ElevatedButton(
                onPressed: () {
                  final Ruslut = textController.text.trim();
                  if (isStudent) { // المنسوبين
                    Navigator.pushReplacement(
                      context,
                      MaterialPageRoute(builder: (context) => HomePage()),
                    );
                  } else {     // الصيانة
                    Navigator.pushReplacement(
                     context,
                     MaterialPageRoute(builder: (context) => MainNavigationDepartment()),
                    );
                  }
                  debugPrint("$Ruslut");
                },
                style: ElevatedButton.styleFrom(
                  backgroundColor: Color(0xFF094A8F),
                  minimumSize: Size(double.infinity, 52),
                  shape: RoundedRectangleBorder(
                    borderRadius: BorderRadiusGeometry.circular(12),
                  ),
                ),
                child: Text(
                  "تحقق",
                  style: TextStyle(
                    fontWeight: FontWeight.w700,
                    color: Colors.white,
                  ),
                ),
              ),
              SizedBox(height: 16),
              OutlinedButton(
                onPressed: () {
                  Navigator.pop(context);
                },
                style: OutlinedButton.styleFrom(
                  backgroundColor: Color.fromARGB(255, 250, 250, 250),
                  minimumSize: Size(double.infinity, 52),
                  shape: RoundedRectangleBorder(
                    borderRadius: BorderRadiusGeometry.circular(12),
                  ),
                ),
                child: Text(
                  "السابق ",
                  style: TextStyle(
                    fontWeight: FontWeight.w700,
                    color: Color.fromARGB(255, 10, 51, 113),
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
 
class HomePage extends StatelessWidget {
  const HomePage({super.key});
 
  // This widget is the root of your application.
  @override
  Widget build(BuildContext context) {
    return Directionality(
      textDirection: TextDirection.rtl,
      child: Scaffold(
        backgroundColor: Color(0xFFE6F0FA),
        bottomNavigationBar: Directionality(
          textDirection: TextDirection.rtl,
          child: BottomNavigationBar(
            currentIndex: 0,
            selectedItemColor: Color(0xFF094A8F),
            unselectedItemColor: Color(0xFF999999),
            type: BottomNavigationBarType.fixed,
            onTap: (index) {
              if (index == 2) {
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => ProfileScreen2()),
                );
              }
            },
            items: [
              BottomNavigationBarItem(
                icon: Icon(Icons.home),
                label: " الرئيسية",
              ),
              BottomNavigationBarItem(
                icon: Icon(Icons.add),
                label: "رفع بلاغ ",
              ),
              BottomNavigationBarItem(
                icon: Icon(Icons.person),
                label: "الحساب",
              ),
            ],
          ),
        ),
        body: SafeArea(
          child: Padding(
            padding: EdgeInsets.all(20),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Row(
                  children: [
                    Text(
